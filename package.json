{
  "name": "portfolio-2026-hal",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "predev": "node scripts/check-main-branch.js",
    "dev": "concurrently -n hal,kanban -c blue,yellow \"npm run dev:hal\" \"npm run dev:kanban\"",
    "dev:hal": "npm run build:agents && vite --port 5173 --strictPort",
    "build:agents": "npm run build --prefix projects/hal-agents",
    "build:hal": "tsc -b && vite build",
    "build:kanban": "npm --prefix projects/kanban run build",
    "dev:kanban": "npm --prefix projects/kanban run dev -- --port 5174 --strictPort",
    "build": "node scripts/build-vercel.js",
    "preview": "vite preview",
    "sync-tickets": "node scripts/sync-tickets.js",
    "update-ticket-body": "node scripts/update-ticket-body-in-supabase.js"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@supabase/supabase-js": "^2.93.3",
    "dotenv": "^17.2.3",
    "iron-session": "^8.0.4",
    "portfolio-2026-hal-agents": "file:projects/hal-agents",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "typescript": "~5.6.3",
    "vite": "^6.0.1"
  }
}
