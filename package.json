{
  "name": "portfolio-2026-hal",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "predev": "node scripts/check-main-branch.js && node scripts/bundle-instructions.js",
    "dev": "npm run dev:hal",
    "dev:hal": "npm run build:agents && vite --port 5173 --strictPort",
    "build:agents": "tsc -p agents/tsconfig.build.json",
    "build:kanban": "npm run build:lib --prefix projects/kanban",
    "fix:rxjs": "node -e \"const fs=require('fs');const p='node_modules/rxjs/src/Rx.global.js';if(fs.existsSync(p)){const c=fs.readFileSync(p,'utf8').replace(\\\"require('../dist/package/Rx')\\\",\\\"require('../dist/cjs/index')\\\");fs.writeFileSync(p,c);}\"",
    "build:hal": "npm run check:lines && node scripts/bundle-docs-instructions.js && node scripts/bundle-instructions.js && npm run fix:rxjs && tsc -b && vite build",
    "build": "node scripts/build-vercel.js",
    "bundle-instructions": "node scripts/bundle-instructions.js",
    "bundle-docs-instructions": "node scripts/bundle-docs-instructions.js",
    "preview": "vite preview",
    "cancel-agents": "node scripts/cancel-all-agents.js",
    "sync-tickets": "node scripts/sync-tickets.js",
    "update-ticket-body": "node scripts/update-ticket-body-in-supabase.js",
    "supabase-list-tickets": "node scripts/supabase-list-tickets.js",
    "supabase-get-ticket": "node scripts/supabase-get-ticket.js",
    "migrate-instructions": "node scripts/run-instructions-migration.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage && node scripts/update-metrics-from-coverage.js",
    "report:lines": "node scripts/report-lines.js",
    "report:simplicity": "node scripts/report-simplicity.js",
    "check:lines": "node scripts/check-lines.js"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.2.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@noble/hashes": "^2.0.1",
    "@supabase/supabase-js": "^2.95.3",
    "ai": "^4.3.0",
    "dotenv": "^17.2.4",
    "iron-session": "^8.0.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "concurrently": "^9.1.2",
    "jsdom": "^28.1.0",
    "supabase": "^2.76.8",
    "ts-complex": "^1.0.0",
    "typescript": "~5.6.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
